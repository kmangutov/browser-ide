---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Get all blog posts
const posts = await Astro.glob('./*.mdx');
---

<BaseLayout title="ML Blog">
  <h1>Machine Learning Blog</h1>
  
  <p>Explore machine learning concepts through narrative-driven articles and interactive examples.</p>
  
  <div class="post-list">
    {posts.map(post => (
      <div class="post-card">
        <h2>
          <a href={post.url}>{post.frontmatter.title}</a>
        </h2>
        {post.frontmatter.date && <time>{new Date(post.frontmatter.date).toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        })}</time>}
        <p>{post.frontmatter.description}</p>
        <a href={post.url} class="read-more">Read more â†’</a>
      </div>
    ))}
  </div>
</BaseLayout>

<style>
  h1 {
    margin-bottom: 1rem;
  }
  
  .post-list {
    margin-top: 2rem;
  }
  
  .post-card {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e0e0e0;
  }
  
  .post-card:last-child {
    border-bottom: none;
  }
  
  .post-card h2 {
    margin-bottom: 0.5rem;
  }
  
  .post-card h2 a {
    color: #2c3e50;
    text-decoration: none;
  }
  
  .post-card h2 a:hover {
    text-decoration: underline;
  }
  
  .post-card time {
    display: block;
    color: #7f8c8d;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }
  
  .read-more {
    display: inline-block;
    color: #3498db;
    text-decoration: none;
    font-weight: 500;
    margin-top: 0.5rem;
  }
  
  .read-more:hover {
    text-decoration: underline;
  }
</style> 