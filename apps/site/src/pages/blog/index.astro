---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { navLink } from '../../utils/paths.js';

// Get all blog posts
const posts = await Astro.glob('./*.mdx');
---

<BaseLayout title="ML Blog">
  <h1>Machine Learning Blog</h1>
  
  <p>Explore machine learning concepts through narrative-driven articles and interactive examples.</p>
  
  <div class="featured-section">
    <h2>Featured Curriculum</h2>
    <div class="featured-card">
      <h3>
        <a href={navLink('/blog/ml-story/')}>Narrative-Driven ML Curriculum</a>
      </h3>
      <p>A journey through machine learning concepts woven into a continuous story, where each section emerges naturally from the last.</p>
      <a href={navLink('/blog/ml-story/')} class="read-more">Start learning →</a>
    </div>
  </div>
  
  <div class="post-list">
    <h2>Recent Posts</h2>
    {posts.map(post => (
      <div class="post-card">
        <h3>
          <a href={post.url}>{post.frontmatter.title}</a>
        </h3>
        {post.frontmatter.date && <time>{new Date(post.frontmatter.date).toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        })}</time>}
        <p>{post.frontmatter.description}</p>
        <a href={post.url} class="read-more">Read more →</a>
      </div>
    ))}
  </div>
</BaseLayout>

<style>
  h1 {
    margin-bottom: 1rem;
  }
  
  h2 {
    margin: 2rem 0 1rem;
    font-size: 1.5rem;
  }
  
  .featured-section {
    margin-top: 2rem;
  }
  
  .featured-card {
    padding: 1.5rem;
    border-radius: 8px;
    background-color: #f8f9fa;
    border-left: 4px solid #3498db;
    margin-bottom: 2rem;
  }
  
  .featured-card h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
  }
  
  .featured-card h3 a {
    color: #2c3e50;
    text-decoration: none;
  }
  
  .featured-card h3 a:hover {
    text-decoration: underline;
  }
  
  .post-list {
    margin-top: 2rem;
  }
  
  .post-card {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e0e0e0;
  }
  
  .post-card:last-child {
    border-bottom: none;
  }
  
  .post-card h3 {
    margin-bottom: 0.5rem;
  }
  
  .post-card h3 a {
    color: #2c3e50;
    text-decoration: none;
  }
  
  .post-card h3 a:hover {
    text-decoration: underline;
  }
  
  .post-card time {
    display: block;
    color: #7f8c8d;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }
  
  .read-more {
    display: inline-block;
    color: #3498db;
    text-decoration: none;
    font-weight: 500;
    margin-top: 0.5rem;
  }
  
  .read-more:hover {
    text-decoration: underline;
  }
</style> 